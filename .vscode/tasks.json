 {
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Delete build Folder",
      "type": "shell",
      "command": "Remove-Item -Recurse -Force ./build",
      "problemMatcher": [],
    },
    {
      "label": "cmake: configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build",
        "-G",
        "Ninja",
        "-DCMAKE_BUILD_TYPE=Debug",
        "-DCMAKE_TOOLCHAIN_FILE=${workspaceFolder}/cmake/arm-none-eabi-toolchain.cmake"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "cmake: build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build"
      ],
      "group": "build",
      "dependsOn": [
        "cmake: configure"
      ],
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "cmake: clean",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build",
        "--target",
        "clean"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Flash STM32G431 (CubeProgrammer):",
      "type": "shell",
      "command": "C:\\Program Files\\STMicroelectronics\\STM32Cube\\STM32CubeProgrammer\\bin\\STM32_Programmer_CLI.exe",
      "args": [
        "-c", "port=SWD",
        "-w", "${workspaceFolder}\\build\\platform\\stm32_cMake_build_system.elf",
        "-v",
        "-rst"
      ],
      "problemMatcher": [],
      "dependsOn": ["cmake: build"],
      "group": "build"

    }
  ]
}